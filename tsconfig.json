{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./dist/",
    "module": "esnext",
    "target": "esnext",
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": false,
    "moduleResolution": "node",
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "plugins": [
      {
        "name": "ts-lit-plugin"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    ".",
  ],
  "exclude": [
    "./tests",
    "node_modules"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "esnext"
    }
  }
}
